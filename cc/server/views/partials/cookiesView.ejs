<script>
	function closePrivacyAndCookiePolicy() {
		document.getElementById('privacy-and-cookie-policy').style.display = 'none'
	}

	function toggleDesc(event, id, arrow) {
		event.preventDefault();
		const target = document.getElementById(id)
		const arrowSpan = document.getElementById(arrow)
		if (target) {
			if (target.style.display == 'block') {
				target.style.display = 'none';
				if (arrowSpan) arrowSpan.innerText = '‚Ä∫';
			} else {
				target.style.display = 'block';
				if (arrowSpan) arrowSpan.innerText = '‚åÑ';
			}
		}
	}

	function getCookiePreferences() {
		return {
			analyticsCookies: document.getElementById("analyticsCookies").checked,
			// marketingCookies: document.getElementById("marketingCookies").checked
		};
	}

	function closeCookiesModal() {
		document.getElementById('cookiesDialog').style.display = 'none';
	}

	function openCookiesSettings() {
		document.getElementById('cookiePopup').style.display = 'none';
		document.getElementById('cookieModal').style.display = 'block';
	}

	function acceptAllCookies() {
		document.getElementById("analyticsCookies").checked = true;
		// document.getElementById("marketingCookies").checked = true;
		sendCookiePreferences();
		closeCookiesModal();
	}

	function rejectAllCookies() {
		document.getElementById("analyticsCookies").checked = false;
		// document.getElementById("marketingCookies").checked = false;
		sendCookiePreferences();
		closeCookiesModal();
	}

	function saveMyPreferences() {
		sendCookiePreferences();
		closeCookiesModal();
	}

	function sendCookiePreferences() {
		const preferences = getCookiePreferences();
		document.dispatchEvent(new CustomEvent("cookiePreferencesUpdated", { detail: preferences }));
	}
</script>


