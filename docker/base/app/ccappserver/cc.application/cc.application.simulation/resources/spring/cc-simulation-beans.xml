<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<bean id="simulationSettingsJAXBManager" class="cc.common.simulate.settings.SimulationSettingsJAXBManager" 
		factory-method="getInstance" />
		
	<bean id="simulationConfigurationManager" class="cc.application.simulation.configuration.SimulationConfigurationManager">
		<constructor-arg ref="ccFileManager" />
	</bean>
	
	<bean id="dynamicSimulationManager" class="cc.application.simulation.DynamicSimulationManager">
		<constructor-arg ref="simulationConfigurationManager" />
	</bean>

</beans>